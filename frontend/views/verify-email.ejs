<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Email - Smolagent</title>
    <link rel="stylesheet" href="/css/auth.css">
    <style>
        .status-container {
            text-align: center;
            padding: 40px 20px;
        }
        
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .success-icon {
            font-size: 64px;
            color: #2ecc71;
            margin: 20px 0;
        }
        
        .error-icon {
            font-size: 64px;
            color: #e74c3c;
            margin: 20px 0;
        }
        
        .message {
            font-size: 18px;
            margin: 20px 0;
            color: #333;
        }
        
        .btn-link {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: transform 0.2s;
        }
        
        .btn-link:hover {
            transform: translateY(-2px);
        }
        
        .btn-secondary {
            background: #95a5a6;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <h1>Email Verification</h1>
            
            <div id="status" class="status-container">
                <div class="spinner"></div>
                <p class="message">Verifying your email...</p>
            </div>
        </div>
    </div>
    
    <script>
        // Get token from URL
        const pathParts = window.location.pathname.split('/');
        const token = pathParts[pathParts.length - 1];
        
        console.log('Verifying token:', token);
        
        // Verify email
        fetch(`/api/auth/verify-email/${token}`)
            .then(res => res.json())
            .then(data => {
                const statusDiv = document.getElementById('status');
                
                if (data.message) {
                    // Success
                    statusDiv.innerHTML = `
                        <div class="success-icon">✓</div>
                        <h2 style="color: #2ecc71;">Email Verified!</h2>
                        <p class="message">${data.message}</p>
                        <p style="color: #666;">You can now access all features of your account.</p>
                        <div>
                            <a href="/" class="btn-link">Go to Dashboard</a>
                            <a href="/login" class="btn-link btn-secondary">Login</a>
                        </div>
                    `;
                } else {
                    // Error
                    statusDiv.innerHTML = `
                        <div class="error-icon">✗</div>
                        <h2 style="color: #e74c3c;">Verification Failed</h2>
                        <p class="message">${data.error || 'Invalid or expired verification link'}</p>
                        <p style="color: #666;">The link may have expired or already been used.</p>
                        <div>
                            <a href="/register" class="btn-link">Register Again</a>
                            <a href="/login" class="btn-link btn-secondary">Login</a>
                        </div>
                    `;
                }
            })
            .catch(err => {
                console.error('Verification error:', err);
                document.getElementById('status').innerHTML = `
                    <div class="error-icon">✗</div>
                    <h2 style="color: #e74c3c;">Connection Error</h2>
                    <p class="message">Failed to verify email. Please try again.</p>
                    <div>
                        <button onclick="location.reload()" class="btn-link">Try Again</button>
                        <a href="/login" class="btn-link btn-secondary">Login</a>
                    </div>
                `;
            });
    </script>
</body>
</html>