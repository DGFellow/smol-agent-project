# Server Configuration
PORT=5001
DEBUG=false

# Model Configuration  
MODEL_CACHE_DIR=./model_cache
MAX_TOKENS=2048
TEMPERATURE=0.7

# Performance Settings
USE_GPU=true
DEVICE=cuda

# Database
DATABASE_URL=sqlite:///smol_agent.db

# JWT Authentication
# IMPORTANT: Replace these with output from: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRATION_HOURS=24  # Or convert to JWT_ACCESS_TOKEN_EXPIRES=86400 if code expects seconds

# Flask Security
SECRET_KEY=your_secure_secret_key_here

# Password Hashing (12 is good for development, 14+ for production)
BCRYPT_LOG_ROUNDS=12

# CORS
FRONTEND_URL=http://localhost:3000

# Optional: Semantic Search (set to true after installing chromadb)
ENABLE_SEMANTIC_SEARCH=false
CHROMA_PERSIST_DIR=./chroma_storage

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Email Configuration (optional - for verification)
EMAIL_ENABLED=false
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USE_TLS=
EMAIL_USERNAME=your_email_username_here
EMAIL_PASSWORD=your_email_password_here
EMAIL_FROM_ADDRESS=your_from_email_here
EMAIL_FROM_NAME=your_from_name_here

# SMS Configuration (optional - for 2FA)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Feature Flags
ENABLE_CALCULATOR=true
ENABLE_WEB_SEARCH=false
ENABLE_CODE_EXECUTION=false
ENABLE_CONVERSATION_MEMORY=true

# API Keys (optional - for external tools)
BRAVE_API_KEY=your_brave_api_key_here
DUCKDUCKGO_API_KEY=your_duckduckgo_api_key_here