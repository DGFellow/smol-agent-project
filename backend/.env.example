# Server Configuration
PORT=5001
DEBUG=false

# Database
DATABASE_URL=sqlite:///smol_agent.db

# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_generate_with_python_secrets
JWT_ACCESS_TOKEN_EXPIRES=3600

# Security
SECRET_KEY=CHANGE_THIS_generate_with_python_secrets
BCRYPT_LOG_ROUNDS=12

# CORS
FRONTEND_URL=http://localhost:3000

# Model Configuration
MODEL_CACHE_DIR=./model_cache
MAX_TOKENS=2048
TEMPERATURE=0.7

# Performance Settings
USE_GPU=true
DEVICE=cuda

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Feature Flags
ENABLE_CALCULATOR=true
ENABLE_WEB_SEARCH=false
ENABLE_CODE_EXECUTION=false
ENABLE_CONVERSATION_MEMORY=true

# Optional: Semantic Search (requires chromadb)
ENABLE_SEMANTIC_SEARCH=false
CHROMA_PERSIST_DIR=./chroma_storage

# API Keys (optional - for external tools)
BRAVE_API_KEY=your_brave_api_key_here
DUCKDUCKGO_API_KEY=your_duckduckgo_api_key_here